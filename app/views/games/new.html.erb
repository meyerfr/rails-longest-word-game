<h1>New Game</h1>
<%= @grid %>
<div class="random-letters">
  <% @grid.each do |letter| %>
    <div class="letter">
      <p><%= letter %></p>
    </div>
  <% end %>
</div>
<div class="form-submit">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <input type="text" class="word-field" name="word" placeholder="Type in the word">
    <input type="submit" value="Play">
  </form>
</div>
